  <body>
    <section class="navigation">
      <div class="nav-container">
        <div class="logo-container">
          <!-- <img class="logo" src="./app/assets/stylesheets/img/BP.png" alt="brownpear"> -->
          <%= image_tag('BP.png', id: "logo-img", alt: "brownpear") %>
        </div>
        <div class="brand">
          <a href="#!">brownpear</a>
        </div>
        <nav>
          <div class="nav-mobile">
            <a id="nav-toggle" href="#!"><span></span></a>
          </div>
          <ul class="nav-list">
            <li><a href="#!">Home</a></li>
            <li><a href="#!">Shop</a>
